{
  "name": "@runn/handover",
  "version": "1.0.0",
  "description": "Automate slack handovers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "tidy": "xo --fix",
    "test": "env-cmd -x ava --node-arguments='--loader=testdouble'",
    "build": "del-cli dist && tsc",
    "start": "node ./dist/index.js",
    "dev": "nodemon -I --exec node --experimental-specifier-resolution=node  --loader ts-node/esm ./src/index.ts",
    "prisma": "prisma"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Runn-Fast/handover.git"
  },
  "keywords": [
    "handover",
    "slack",
    "standup"
  ],
  "author": {
    "name": "George Czabania",
    "email": "george@runn.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Runn-Fast/handover/issues"
  },
  "homepage": "https://github.com/Runn-Fast/handover#readme",
  "devDependencies": {
    "@types/node": "18.7.11",
    "ava": "4.3.1",
    "del-cli": "5.0.0",
    "env-cmd": "10.1.0",
    "nodemon": "2.0.19",
    "testdouble": "3.16.6",
    "ts-node": "10.9.1",
    "typescript": "4.7.4",
    "xo": "0.51.0"
  },
  "dependencies": {
    "@prisma/client": "4.2.1",
    "@slack/bolt": "3.12.1",
    "@slack/web-api": "6.7.2",
    "date-fns": "2.29.2",
    "date-fns-tz": "1.3.6",
    "mem": "9.0.2",
    "openai": "3.0.0",
    "p-queue": "7.3.0",
    "prisma": "4.2.1",
    "zod": "3.18.0"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "@typescript-eslint/naming-convention": "off",
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
